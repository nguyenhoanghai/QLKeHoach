
@{
    ViewBag.Title = "QL Màu";
    Layout = "~/Views/Shared/_MaterializeLayout.cshtml";
}


<h4>Quản lý Màu</h4>
<hr />

<div class="table-responsive">
    <table id="tbColors" width="100%" class="table striped highlight "></table>
</div>

<!-- Modal Structure -->
<div id="modal1" class="modal modal-small">
    <div class="modal-content" style=" padding-bottom:0">
        <h4>Thông tin Màu</h4>
        <hr />
        <div class="row" style=" margin-bottom:0">
            <div class="col input-field s12 ">
                <input class="" type="text" id='txtname' />
                <label for="txtname">Tên Màu</label>
            </div>
            <div class="col input-field s12 ">
                <textarea class="materialize-textarea" id='txtNote'></textarea>
                <label for="txtNote">Ghi chú</label>
            </div>
        </div>
    </div>
    <hr />
    <div class="modal-footer">
        <button id="btnSave" class=" waves-light btn ">Lưu lại</button>
        <button id="btnCancel" class="modal-close  grey btn ">Hủy bỏ</button>
    </div>
</div>

 
<script src="~/Scripts/App/Color/Color.js"></script>
<script>

    var color = new GPRO.Color();
    color.Init();
    function Edit(Id) {
        color.Edit(Id);
    }

    function Delete(Id) {
        color.Delete(Id);
    }
</script>

