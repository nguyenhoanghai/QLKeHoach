    <title>@ViewBag.Title</title>
    <link href="~/Content/Jquery.alerts/jquery.alerts.css" rel="stylesheet" />
    <link href="~/Content/materialize.min.css" rel="stylesheet" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link href="~/Content/jquery.dataTables.min.css" rel="stylesheet" />
    <link href="~/Content/App.css" rel="stylesheet" />

    <script src="~/Scripts/jquery-1.10.2.js"></script>
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
    <script src="~/Scripts/cookie.js"></script>
    <script src="~/Scripts/materialize.min.js"></script>
    <script src="~/Scripts/jquery.dataTables.min.js"></script>
</head>
<body>
    <nav class="blue darken-3">
        <div class="container nav-wrapper ">
            <a href="#" class="brand-logo">GPRO-Plan</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li>
                    <a class="dropdown-trigger" href="#!" data-target="dropdown1">
                        LCD
                        <i class="material-icons right">arrow_drop_down</i>
                    </a>
                    <ul id="dropdown1" class="dropdown-content">
                        @*<li>@Html.ActionLink("LCD cắt (SH)", "Index", "InsertProductivity")</li>*@
                        @*<li><a target="_blank" href="/Productivity/LCDTongHopN_Partial">LCD tổng hợp (SH)</a></li>*@
                        <li>@Html.ActionLink("Danh sách LCD", "Index", "Home")</li>
                    </ul>
                </li>
                <li>
                    <a class="dropdown-trigger" href="#!" data-target="dropdown2">
                        Nhập sản lượng
                        <i class="material-icons right">arrow_drop_down</i>
                    </a>
                    <ul id="dropdown2" class="dropdown-content">
                        <li>@Html.ActionLink("Sản lượng năng suất", "Index", "InsertProductivity")</li>
                        <li>@Html.ActionLink("Sản lượng công đoạn", "InsertPhaseQuantity", "InsertProductivity")</li>
                        <li>@Html.ActionLink("Lịch sử công đoạn", "HistoryPhaseQuantity", "InsertProductivity")</li>
                    </ul>
                </li>
                <li>@Html.ActionLink("Sản phẩm", "Index", "Product")</li>
                <li>@Html.ActionLink("Phân công sản xuất", "Index", "Assignment")</li>
                <li>
                    <a class="dropdown-trigger" href="#!" data-target="dropdown3">
                        Tỉ lệ đèn
                        <i class="material-icons right">arrow_drop_down</i>
                    </a>
                    <ul id="dropdown3" class="dropdown-content">
                        <li>@Html.ActionLink("Đèn cắt", "TiLeCat", "Light")</li>
                    </ul>
                </li>
            </ul>
        </div>
    </nav>
    <div class="progress hide">
        <div class="indeterminate"></div>
    </div>

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p><a href="#">GPRO Company</a></p>
            <p>&copy; @DateTime.Now.ToString("dd/MM/yyyy") - GPRO</p>
        </footer>
    </div>
     
    <script>
        $(document).ready(function () {
            $(".dropdown-trigger").dropdown();
            $('select').formSelect();
            $('.modal').modal();
        });

        function ReDrawFilterAndLengthBoxForGrid(table) {
            var filterDiv = $('<div class="input-field"></div>');
            var txtSearch = $('<input type="search" id="tbSearch"  />');
            txtSearch.keyup(function () { table.search(this.value).draw(); });
            filterDiv.append(txtSearch);
            filterDiv.append('<label for="tbSearch">Filter</label>');
            $('.dataTables_filter').empty().append(filterDiv);

            var lengthDiv = $('<div class="input-field"></div>');
            var select = $('.dataTables_length select')[0];
            select.setAttribute('Id', 'lengthSelect');
            select.style = "width:100px";
            lengthDiv.append(select);
            lengthDiv.append('<label for="lengthSelect">Show entries</label>');
            $('.dataTables_length').empty().append(lengthDiv);
            $('select').formSelect();
        }
    </script>

</body>
</html>
